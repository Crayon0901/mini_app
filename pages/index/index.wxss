.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}
#myVideo{
  border-radius: 10px
}
#temp_Audio{
  border-radius: 50%
}
.wrap{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 200rpx 0;
}
#index_img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.userinfo-view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin: 100rpx 0;
}
.UserName{
  font-size: 46rpx;
  font-weight: bold;
  margin-top: 50rpx;
}
