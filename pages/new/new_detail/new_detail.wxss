/* pages/new/news_detail/new_detail.wxss */
.new_detail_head{
  width: 100%;
  height: 500rpx;
  position: relative;
}
.new_detail_head .detail_img{
  width: 100%;
  height: 500rpx;
}
.new_detail_head .detail_music_btn{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  left: 50%;
  margin-left:-50rpx;
  margin-top: -50rpx; 
  opacity: 0.7;
}
.new_detail_subhead{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.new_detail_subhead .user_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.new_detail_subhead .user_name{
  vertical-align: middle;
  font-size: 36rpx;
  margin-left: 20rpx;
  font-weight: bold;
}
.new_detail_subhead .date{
  vertical-align: middle;
  margin-right:10rpx; 
  font-size: 28rpx;
  color: #bbb;
  line-height: 80rpx;
}
.new_detail_title{
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  font-size: 40rpx;
  letter-spacing: 2px;
  font-weight: bold;
}
.new_detail_tool{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  position:relative;
  overflow: hidden;
}
.new_detail_tool image{
  height: 100rpx;
  width: 100rpx;
}
.new_detail_tool .strip{
  z-index: -99;
  height: 1px;
  width: 94%;
  background-color: #ccc;
  position: absolute;
  top: 50%;
  box-sizing: border-box;
  left: 20rpx;
}
.new_detail_content{
  padding: 0rpx 20rpx;
}
.new_detail_content text{
  font-size: 28rpx;
  color: #666;
  line-height: 34rpx;
  letter-spacing: 2px;
  text-indent: 50rpx;
}