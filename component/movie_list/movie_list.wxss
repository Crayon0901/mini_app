/* component/movie_list/movie_list.wxss */
.movie_wrapper{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
}
.movie_search{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  height: 80rpx;
  background-color: rgb(242, 242, 242);
}
.movie_search .movie_search_img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  box-sizing: border-box;
}
.movie_search .movie_search_input{
  width: 100%;
  box-sizing: border-box;
  padding: 7rpx 20rpx;
  vertical-align: middle;
}
.movie_hot_showing{
  width: 100%;
  height: 550rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: flex-start;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  padding: 0rpx 10rpx;
}
.movie_hot_showing .movie_hot_showing_top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.movie_hot_showing .movie_hot_showing_top text{
  font-size: 28rpx;
  line-height: 70rpx;
  vertical-align: middle;
}
.movie_hot_showing .movie_hot_showing_top .more_text{
  color: #345ead;
}
.movie_hot_showing .movie_hot_showing_top .more_img{
  width: 10rpx;
  height: 20rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}